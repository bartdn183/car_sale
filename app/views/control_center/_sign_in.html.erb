<section class="devise" style="padding: 0;">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "Your Email *", class: "form-control input-lg" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Your Password *", class: "form-control input-lg" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-xl btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>

<section class="devise" style="padding: 0;">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <%= f.hidden_field :role, value: "pending" %>

      <div class="form-group"> 
        <%= f.text_field :first_name, autofocus: true, required: true, class: "form-control input-lg", placeholder: "Your First Name *" %>
      </div>

      <div class="form-group">
        <%= f.text_field :last_name, required: true, class: "form-control input-lg", placeholder: "Your Last Name *" %>
      </div>

      <div class="form-group">
        <%= f.text_field :city, required: true, class: "form-control input-lg", placeholder: "Your City *" %>
      </div>

      <div class="form-group">
        <%= f.select(:country, User::COUNTRIES, { include_blank: "Select Country"}, class: "form-control input-lg") %>
      </div>

      <div class="form-group">
        <%= f.text_field :tel, class: "form-control input-lg", placeholder: "Your Tel *" %>
      </div>
    
      <div class="form-group">
        <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.country_zones("CO"), { include_blank: "Select Time Zone..."}, required: true, class: "form-control input-lg") %>
      </div>

      <div class="form-group">
        <%= f.select(:language, [["EspaÃ±ol", "es"],["English", "en"],["Nederlands", "nl"]], { include_blank: "Select Language"}, class: "form-control input-lg", required: true) %>
      </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "Your Email *", class: "form-control input-lg" %>
    </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Your Password *", class: "form-control input-lg" %>
  </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Your Password Confirmation*", class: "form-control input-lg" %>
    </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-xl btn-block"  %>
  </div>
<% end %>

</section>
